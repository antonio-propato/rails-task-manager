<h1>My tasks</h1>

<div class="box">
<ul>
<% @tasks.each do |task| %>
<li class="li"><input type="checkbox"> <%= link_to task.title, task_path(task), class:"text-decoration-none" %></li>
<% end %>
</ul>
</div>

<div class="line"></div>

<div class="footer">
<p><%= link_to '+ Add a new task', new_task_path %></p>
</div>
